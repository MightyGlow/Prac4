INSERT INTO friends VALUES(4,'AYUSH','SYCS');
SELECT * FROM friends;

DECLARE 
	total_count number(30);
BEGIN
	UPDATE friends
	SET NAME ='AFFAN SHAIKH' where SRno=1;

	IF SQL%NOTFOUND THEN
		DBMS_OUTPUT.PUT_LINE('SORRY DATA NOT FOUND!');
	ELSIF SQL%FOUND THEN
		total_count:= SQL%ROWCOUNT;
		DBMS_OUTPUT.PUT_LINE(total_count||'NAME UPDATED!');
	END IF;
END;
/
SELECT * FROM friends;
