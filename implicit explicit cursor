CREATE TABLE friends (
    SRno INT NOT NULL,
    NAME VARCHAR(15) NOT NULL,
    CLASS VARCHAR(15),
    PRIMARY KEY(SRno)
);	
INSERT INTO friends VALUES(1,'AFFAN','SYCS');
INSERT INTO friends VALUES(2,'ANWAR','SYCS');
